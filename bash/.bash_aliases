## cd
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."
alias .......="cd ../../../../../.."
alias ~="cd ~"

alias conf="cd ~/.config"

## git
alias g="git"
alias gs="git status"
alias gd="git diff"
alias gds="git diff --staged"
alias gcl="git clone --recurse-submodules"
alias gl="git pull"
alias gll="git pull --rebase"

## make
alias m="make"
alias ma="make all"
alias mc="make clean"
alias mb="make build"
alias mr="make run"
alias mt="make test"
alias mf="make format"

## vim
alias vi="nvim"
